{
    "manifest_version": 2,
    "name": "cChat - Chat Extension for every web page",
    "version": "1.0",
    "description": "Chat with GenosDB on any webpage.",
    "permissions": [
        "storage",
        "activeTab",
        "identity",
        "webRequest",
        "tabs"
    ],
  "content_security_policy": "script-src 'self'; object-src 'self'; worker-src 'self' blob:",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
	"background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}